               id="de.bht.fpa.mail.s791537.imapaccount.toolbars.accountToolbar">
            <command
                  commandId="de.bht.fpa.mail.s791537.imapaccounts.commands.configure"
                  icon="icons/sample.gif"
                  id="de.bht.fpa.mail.s791537.imapaccounts.commands.configure"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.bht.fpa.mail.s791537.imapaccounts.handlers.ConfigureHandler"
            commandId="de.bht.fpa.mail.s791537.imapaccounts.commands.configure">
