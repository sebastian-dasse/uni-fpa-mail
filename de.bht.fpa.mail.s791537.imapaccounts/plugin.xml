            id="de.bht.fpa.mail.s791537.imapaccounts.commands.category"
            name="Sample Category">
      </category>
      <command
            category="de.bht.fpa.mail.s791537.imapaccounts.commands.category"
            id="de.bht.fpa.mail.s791537.imapaccounts.commands.configure"
            name="Configure">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="de.bht.fpa.mail.s791537.imapaccounts.commands.configure"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
