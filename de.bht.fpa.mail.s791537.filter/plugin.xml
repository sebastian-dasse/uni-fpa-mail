<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="de.bht.fpa.mail.s791537.filter.commands.category"
            name="SampleCategory">
      </category>
      <command
            categoryId="de.bht.fpa.mail.s791537.filter.commands.category"
            id="de.bht.fpa.mail.s791537.filter.commands.configureFilter"
            name="Configure Filter">
      </command>
      <command
            categoryId="de.bht.fpa.mail.s791537.filter.commands.category"
            id="de.bht.fpa.mail.s791537.filter.commands.clearFilter"
            name="Clear Filter">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="de.bht.fpa.mail.s791537.filter.commands.configureFilter"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M3+M2+F">
      </key>
      <key
            commandId="de.bht.fpa.mail.s791537.filter.commands.clearFilter"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M3+M2+C">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="de.bht.fpa.mail.s791537.filter.toolbars.toolbar">
            <command
                  commandId="de.bht.fpa.mail.s791537.filter.commands.configureFilter"
                  icon="icons/sample.gif"
                  id="de.bht.fpa.mail.s791537.filter.toolbars.configureFilter"
                  tooltip="Say hello world">
            </command>
            <command
                  commandId="de.bht.fpa.mail.s791537.filter.commands.clearFilter"
                  icon="icons/sample.gif"
                  id="de.bht.fpa.mail.s791537.filter.toolbars.clearFilter"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="de.bht.fpa.mail.s791537.filter.menus.sampleMenu"
               label="Filter"
               mnemonic="F">
            <command
                  commandId="de.bht.fpa.mail.s791537.filter.commands.configureFilter"
                  id="de.bht.fpa.mail.s791537.filter.menus.configureFilter"
                  mnemonic="F">
            </command>
            <command
                  commandId="de.bht.fpa.mail.s791537.filter.commands.clearFilter"
                  id="de.bht.fpa.mail.s791537.filter.menus.clearFilter"
                  mnemonic="C">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.bht.fpa.mail.s791537.filter.handlers.ConfigureFilterHandler"
            commandId="de.bht.fpa.mail.s791537.filter.commands.configureFilter">
      </handler>
      <handler
            class="de.bht.fpa.mail.s791537.filter.handlers.ClearFilterHandler"
            commandId="de.bht.fpa.mail.s791537.filter.commands.clearFilter">
      </handler>
   </extension>

</plugin>
